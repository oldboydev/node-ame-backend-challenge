{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "strict": false,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  }
}